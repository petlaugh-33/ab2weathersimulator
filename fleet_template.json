{
  "Parameters": {
    "SerialNumber": {
      "Type": "String"
    },
    "AWS::IoT::Certificate::Id": {
      "Type": "String"
    }
  },
  "Resources": {
    "certificate": {
      "Type": "AWS::IoT::Certificate",
      "Properties": {
        "CertificateId": { "Ref": "AWS::IoT::Certificate::Id" },
        "Status":        "ACTIVE"
      }
    },
    "fleetPolicy": {
      "Type": "AWS::IoT::Policy",
      "Properties": {
        "PolicyName": { "Fn::Sub": "${SerialNumber}-fleet-policy" },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect":   "Allow",
              "Action": [
                "iot:Connect",
                "iot:Publish",
                "iot:Subscribe",
                "iot:Receive"
              ],
              "Resource": "*"
            }
          ]
        }
      }
    },
    "attachPolicy": {
      "Type": "AWS::IoT::PolicyPrincipalAttachment",
      "Properties": {
        "PolicyName":  { "Ref": "fleetPolicy" },
        "Principal":   { "Ref": "certificate" }
      }
    },
    "thing": {
      "Type": "AWS::IoT::Thing",
      "Properties": {
        "ThingName": { "Ref": "SerialNumber" }
      }
    },
    "attachThing": {
      "Type": "AWS::IoT::ThingPrincipalAttachment",
      "Properties": {
        "ThingName": { "Ref": "thing" },
        "Principal": { "Ref": "certificate" }
      }
    }
  }
}

